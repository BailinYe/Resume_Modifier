# üõ†Ô∏è Development Environment Configuration
# Copy this to .env for local development

# =====================================
# üîë API Keys & Secrets (REQUIRED)
# =====================================

# OpenAI API Key - Get from https://platform.openai.com/account/api-keys
OPENAI_API_KEY=your_development_openai_api_key_here

# Flask Secret Key - Generate with: python -c "import secrets; print(secrets.token_hex(32))"
FLASK_SECRET_KEY=dev-secret-key-not-for-production

# JWT Secret - Generate with: python -c "import secrets; print(secrets.token_hex(32))"
JWT_SECRET=dev-jwt-secret-not-for-production

# =====================================
# üóÑÔ∏è Database Configuration
# =====================================

# Local PostgreSQL
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/resume_app

# Alternative: SQLite for quick development
# DATABASE_URL=sqlite:///app.db

# =====================================
# üìß Email Configuration (Password Recovery)
# =====================================

# Email Server Configuration - Development Settings
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USE_SSL=False
MAIL_USERNAME=your-dev-email@gmail.com
MAIL_PASSWORD=your-dev-app-password
MAIL_DEFAULT_SENDER=your-dev-email@gmail.com

# For testing without real email (prints to console)
# MAIL_SUPPRESS_SEND=True
# TESTING=True

# =====================================
# üîê Password Recovery Security
# =====================================

# Token Configuration
PASSWORD_RESET_TOKEN_EXPIRY_HOURS=24
PASSWORD_RESET_TOKEN_LENGTH=64

# Rate Limiting (per hour) - More lenient for development
PASSWORD_RESET_RATE_LIMIT_USER=10    # per user email
PASSWORD_RESET_RATE_LIMIT_IP=20      # per IP address

# Security Settings
PASSWORD_RESET_CLEANUP_INTERVAL_HOURS=2     # cleanup expired tokens more frequently
PASSWORD_RESET_MAX_REQUESTS_PER_DAY=50      # higher limit for testing

# Password Requirements - Can be relaxed for development testing
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_UPPERCASE=True
PASSWORD_REQUIRE_LOWERCASE=True
PASSWORD_REQUIRE_NUMBERS=True
PASSWORD_REQUIRE_SPECIAL_CHARS=True

# =====================================
# üåê Application URLs & Branding
# =====================================

# Frontend URL (for email links)
FRONTEND_URL=http://localhost:3000
APP_NAME=Resume Editor (Dev)
COMPANY_NAME=Your Company Name
SUPPORT_EMAIL=dev-support@your-domain.com

# Email Template Configuration
EMAIL_LOGO_URL=http://localhost:3000/logo.png
EMAIL_FOOTER_TEXT=¬© 2024 Your Company. Development Environment.
EMAIL_UNSUBSCRIBE_URL=http://localhost:3000/unsubscribe

# =====================================
# üåê Flask Application Configuration
# =====================================

# Flask Environment
FLASK_APP=app.server
FLASK_ENV=development
FLASK_DEBUG=1

# Server Configuration
PORT=5001
HOST=0.0.0.0

# =====================================
# üîê Google OAuth Configuration (Optional)
# =====================================

# Google OAuth Credentials - Get from https://console.cloud.google.com/
GOOGLE_CLIENT_ID=your_dev_google_client_id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_dev_google_client_secret

# Google Redirect URI - Update with your local domain
GOOGLE_REDIRECT_URI=http://localhost:5001/auth/google/callback

# =====================================
# üîí Security Configuration
# =====================================

# CORS Configuration - Allow local development
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://127.0.0.1:3000

# Session Configuration - Less strict for development
SESSION_COOKIE_SECURE=0  # Allow non-HTTPS in development
SESSION_COOKIE_HTTPONLY=1
SESSION_COOKIE_SAMESITE=Lax

# Security Headers
FORCE_HTTPS=0  # Don't force HTTPS in development

# =====================================
# üìù Logging Configuration
# =====================================

# Log Level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=DEBUG

# Log Format
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - [%(filename)s:%(lineno)d] - %(message)s

# =====================================
# ‚ö° Performance Configuration
# =====================================

# Maximum file upload size (in bytes)
MAX_CONTENT_LENGTH=16777216  # 16MB

# Request timeout (in seconds)
REQUEST_TIMEOUT=300

# =====================================
# üß™ Testing Configuration
# =====================================

# Test Database
TEST_DATABASE_URL=postgresql://postgres:postgres@localhost:5432/resume_app_test

# Email Testing
TESTING_EMAIL_BACKEND=console  # Print emails to console instead of sending

# Rate Limiting Override for Testing
TESTING_DISABLE_RATE_LIMITING=False  # Set to True to disable rate limiting in tests

# =====================================
# üö® Development Notes
# =====================================

# 1. This configuration is for development only
# 2. Never use these settings in production
# 3. Create a .env file with your actual values
# 4. The .env file should not be committed to version control
# 5. Use real email credentials to test password recovery
# 6. Consider using a dedicated development Gmail account
# 7. Generate strong secrets even for development

